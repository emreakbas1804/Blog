@model Writer
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portre Blog Giriş Yap</title>
    <link rel="stylesheet" href="~/content/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script src="~/content/jquery/dist/jquery.js"></script>
    <script src="~/content/sweetalert/dist/sweetalert.min.js"></script>


</head>

<body>

    @await Html.PartialAsync("_navbar")
    <div class="container my-5" style="min-height: 50vh;">
        <div class="row">
            <h3>Yazar oturum aç</h3>
            <hr>
            <form action="login" method="post" class="mt-3">                

                <div class="form-group my-3">
                    <label for="exampleInputEmail1">Email adresi</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Mail adresi giriniz" asp-for="WriterMail">                              
                </div>

                <div class="form-group my-3">
                    <label for="exampleInputPassword1">Parola</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Parola giriniz." asp-for="WriterPassword">                   
                </div>

                <div class="form-check my-3">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1" checked>
                    <label class="form-check-label" for="exampleCheck1">Beni hatırla</label>
                </div>
                

                <button type="submit" class="btn btn-success mt-4">Giriş yap </button>
                <a href="~/home/register" class="btn btn-success mt-4">Üye ol</a>
                                
            </form>
        </div>
    </div>

    @await Html.PartialAsync("_footer")

</body>

</html>